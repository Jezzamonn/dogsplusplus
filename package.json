{
  "name": "ld49",
  "version": "1.0.0",
  "description": "Game for Ludum Dare 49",
  "scripts": {
    "watch": "npm-watch",
    "reload": "reload -b -d build/client",
    "static": "mkdir -p build/client/ && rsync -a --delete --exclude js/ --exclude css/ --exclude sprites/ src/static/ build/client/",
    "sass": "mkdir -p build/client/css && sass src/scss/styles.scss build/client/css/styles.css",
    "sprites": "mkdir -p build/client/sprites && rsync -a --delete --exclude '*.aseprite' assets/ build/client/sprites/",
    "music": "mkdir -p build/client/music && rsync --delete -a --include='*.mp3' --exclude='*/' --exclude='*' music/ build/client/music/",
    "webpack": "webpack",
    "build": "npm-run-all --parallel webpack sass static sprites music",
    "clean": "rm -rf build/*"
  },
  "watch": {
    "static": {
      "patterns": [
        "src/static/**"
      ],
      "extensions": "html,css,png,gif,mp3,ttf"
    },
    "sprites": {
      "patterns": [
        "assets/**"
      ],
      "extensions": "json,png"
    },
    "music": {
      "patterns": [
        "music/**"
      ],
      "extensions": "mp3"
    },
    "sass": {
      "patterns": [
        "src/scss/**"
      ],
      "extensions": "scss"
    },
    "webpack": {
      "patterns": [
        "src/ts/**"
      ],
      "extensions": "js,jsx,ts,tsx"
    }
  },
  "author": "Jezzamon",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@tsconfig/recommended": "^1.0.1",
    "babel-loader": "^8.2.2",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "reload": "^3.2.0",
    "sass": "^1.42.1",
    "webpack": "^5.56.0",
    "webpack-cli": "^4.8.0"
  }
}
